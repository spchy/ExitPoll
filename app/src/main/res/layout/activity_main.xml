<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="11dp"
        android:text="เลือกผู้สมัครหมายเลข 1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnNo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="เลือกผู้สมัครหมายเลข 2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNo3"
        app:layout_constraintEnd_toEndOf="@+id/btnNo1"
        app:layout_constraintStart_toStartOf="@+id/btnNo1"
        app:layout_constraintTop_toBottomOf="@+id/btnNo1" />

    <Button
        android:id="@+id/btnNo3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="เลือกผู้สมัครหมายเลข 3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/NotVote"
        app:layout_constraintEnd_toEndOf="@+id/btnNo2"
        app:layout_constraintStart_toStartOf="@+id/btnNo2"
        app:layout_constraintTop_toBottomOf="@+id/btnNo2" />

    <Button
        android:id="@+id/NotVote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="งดออกเสียง"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnResult"
        app:layout_constraintEnd_toEndOf="@+id/btnNo3"
        app:layout_constraintStart_toStartOf="@+id/btnNo3"
        app:layout_constraintTop_toBottomOf="@+id/btnNo3" />

    <Button
        android:id="@+id/btnResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="ดูผล"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="367dp"
        android:layout_height="139dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit_poll" />
</android.support.constraint.ConstraintLayout>